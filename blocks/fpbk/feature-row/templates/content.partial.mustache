<div class="feature-row__column_content col-12 col-lg-6 align-items-center d-flex flex-wrap flex-lg-nowrap flex-row justify-content-lg-{{ side }} mx-0 px-0">
	<div class="feature-row__content d-flex flex-wrap flex-column align-items-center align-items-lg-start justify-content-center text-center text-lg-left mx-auto px-2">
		{{# header }}
			<{{ heading_tag }} class="h2 mb-2 mb-md-3 mb-lg-4">{{ header }}</{{ heading_tag }}>
		{{/ header }}

		{{# body }}
			<div class="feature-row__content_body">{{{ body }}}</div>
		{{/ body }}

		{{# cta.html }}
			{{{ cta.html }}}
		{{/ cta.html }}

		{{# secondary_cta.html }}
			<div class="feature-row__cta my-2">
				{{{ secondary_cta.html }}}
			</div>
		{{/ secondary_cta.html }}

		{{# subtext }}
			<span class="subtext align-self-lg-start">{{{ subtext }}}</span>
		{{/ subtext }}
	</div>
</div>
