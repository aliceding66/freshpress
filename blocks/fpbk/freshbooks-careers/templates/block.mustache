<div class="freshbooks-careers__filters d-flex flex-column flex-md-row align-items-center justify-content-center">
    <div class="freshbooks-careers__filter position-relative mb-3 mb-md-0 mr-md-4 w-100">
        <select name="departments" id="departments" class="freshbooks-careers__select w-100 px-3 py-2 font-weight-medium">
            <option value="" selected>{{ str_all_departments }}</option>
        </select>
    </div>
    <div class="freshbooks-careers__filter position-relative w-100">
        <select name="locations" id="locations" class="freshbooks-careers__select w-100 px-3 py-2 font-weight-medium">
            <option value="" selected>{{ str_all_locations }}</option>
        </select>
    </div>
</div>
<div class="freshbooks-careers__table mt-5">
    <div class="freshbooks-careers__headings d-none d-sm-flex">
        <div class="freshbooks-careers__heading text-uppercase font-weight-medium">{{ str_job_title }}</div>
        <div class="freshbooks-careers__heading text-uppercase font-weight-medium">{{ str_department }}</div>
        <div class="freshbooks-careers__heading text-uppercase font-weight-medium">{{ str_location }}</div>
    </div>
    <div id="jobs" class="freshbooks-careers__list">{{ editor_careers_items }}</div>
</div>
<div id="loader" class="freshbooks-careers__loader position-relative mx-auto mt-5">
    <div></div><div></div><div></div><div></div>
</div>
<div class="freshbooks-careers__pagination d-flex justify-content-center align-items-center mt-5">
    <div id="nav-arrow-left" class="freshbooks-careers__arrow freshbooks-careers__arrow_left d-flex justify-content-center align-items-center mb-2"></div>
    <ul id="pagination" class="freshbooks-careers__pages mx-0 mb-0 p-0 d-flex flex-wrap justify-content-center">{{ editor_pagination }}</ul>
    <div id="nav-arrow-right" class="freshbooks-careers__arrow freshbooks-careers__arrow_right d-flex justify-content-center align-items-center active mb-2"></div>
</div>
